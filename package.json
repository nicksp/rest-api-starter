{
  "name": "rest-api-starter",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@9.15.3",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node ./dist/src/index.js",
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix",
    "typecheck": "tsc --noEmit",
    "db:push": "NODE_OPTIONS=\"--import tsx\" drizzle-kit push",
    "db:generate": "NODE_OPTIONS=\"--import tsx\" drizzle-kit generate",
    "db:studio": "NODE_OPTIONS=\"--import tsx\" drizzle-kit studio",
    "db:migrate": "NODE_OPTIONS=\"--import tsx\" drizzle-kit migrate",
    "db:seed": "tsx src/db/seed.ts",
    "dev:docker": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "dev:docker:down": "docker compose -f docker-compose.yml -f docker-compose.dev.yml down",
    "test:docker": "docker compose -f docker-compose.test.yml --env-file .env.test up -d",
    "test:docker:down": "docker compose -f docker-compose.test.yml down",
    "test": "pnpm test:docker && vitest run",
    "test:watch": "pnpm test:docker && vitest --watch",
    "test:coverage": "pnpm test:docker && vitest run --coverage",
    "posttest": "pnpm test:docker:down",
    "prepare": "husky"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "7.3.0",
    "@hono/node-server": "1.13.8",
    "@hono/zod-openapi": "0.18.4",
    "@scalar/hono-api-reference": "0.5.172",
    "dotenv": "16.4.7",
    "dotenv-expand": "12.0.1",
    "drizzle-orm": "0.39.2",
    "drizzle-seed": "0.3.1",
    "drizzle-zod": "0.7.0",
    "hono": "4.7.0",
    "hono-pino": "0.7.0",
    "pino": "9.6.0",
    "pino-pretty": "13.0.0",
    "postgres": "3.4.5",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.1.1",
    "@types/node": "^22.13.1",
    "@vitest/coverage-v8": "3.0.5",
    "drizzle-kit": "0.30.4",
    "eslint": "^9.19.0",
    "eslint-plugin-format": "^1.0.1",
    "husky": "9.1.7",
    "lint-staged": "15.4.3",
    "tsc-alias": "1.8.10",
    "tsx": "^4.19.2",
    "typescript": "5.7.3",
    "vitest": "3.0.5"
  },
  "lint-staged": {
    "*.ts": "pnpm lint:fix --max-warnings=0 && pnpm typecheck"
  }
}
